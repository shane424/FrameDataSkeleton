<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/RyuBtn"
                android:gravity="center"
                android:background="@drawable/ryu"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </LinearLayout>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/KenBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/ken"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ZangiefBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/zangief" />
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/AbelBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/abel"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/AdonBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/adon"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/AkumaBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/akuma"/>
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/BalrogBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/balrog"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/BlankaBtn"
                android:gravity="center"
                android:longClickable="false"
                android:background="@drawable/blanka"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>
    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    </TableRow>

</TableLayout>

